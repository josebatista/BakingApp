<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context="com.example.jpereira.bakingapp.RecipeDetailActivity">

        <FrameLayout
            android:id="@+id/recipe_detail_fragment_container"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintBottom_toTopOf="@+id/recipe_detail_bt_next"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/recipe_detail_bt_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/recipe_detail_margin_button"
            android:layout_marginLeft="@dimen/recipe_detail_margin_button"
            android:layout_marginStart="@dimen/recipe_detail_margin_button"
            android:clickable="true"
            android:onClick="btnPrevious"
            android:rotation="180"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:srcCompat="@drawable/ic_forward_black" />

        <android.support.design.widget.FloatingActionButton
            android:id="@+id/recipe_detail_bt_next"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/recipe_detail_margin_button"
            android:layout_marginEnd="@dimen/recipe_detail_margin_button"
            android:layout_marginRight="@dimen/recipe_detail_margin_button"
            android:clickable="true"
            android:onClick="btnNext"
            app:fabSize="normal"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:srcCompat="@drawable/ic_forward_black" />

    </android.support.constraint.ConstraintLayout>
</layout>